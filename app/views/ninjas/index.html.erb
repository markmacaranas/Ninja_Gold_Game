<div class="container">
	<div class="row">
		<h1>Your Gold: <%= @gold %></h1>
	</div>

	<div class="row text-center">
		<div class="col-md-3">
			<h2>Farm</h2>
			<p>(earns 10 - 20 golds)</p>

			<form action="/farm" method="post">
				<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
				<button class="btn btn-default">Find Gold!</button>
			</form>
		</div>
		<div class="col-md-3">
			<h2>Cave</h2>
			<p>(earns 5 - 10 golds)</p>

			<form action="/cave" method="post">
				<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
				<button class="btn btn-default">Find Gold!</button>
			</form>
		</div>
		<div class="col-md-3">
			<h2>House</h2>
			<p>(earns 2 - 5 golds)</p>

			<form action="/house" method="post">
				<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
				<button class="btn btn-default">Find Gold!</button>
			</form>
		</div>
		<div class="col-md-3">
			<h2>Casino</h2>
			<p>(earns/takes 0-50 golds)</p>

			<form action="/casino" method="post">
				<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
				<button class="btn btn-default">Find Gold!</button>
			</form>
		</div>
	</div>
		<hr/>
		<h5>Activities:</h5>
		<div class="row" style="border: 2px solid black; height: 200px; overflow: scroll">

			<% @activities.each do |play| %>
				<% if play["won"] == true %>
				<p style="color:green"> <%= play["sentence"] %></p>

				<% else %>
				<p style="color:red"> <%= play["sentence"] %></p>
				<% end %>

			<% end %>
		</div>
</div>
